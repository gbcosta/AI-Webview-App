{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:webview:allow-set-webview-zoom",
    "shell:default",
    "deep-link:default",
    "process:default",
    "core:window:allow-set-theme",
    "fs:default",
    {
      "identifier": "fs:allow-create",
      "allow": ["$APPDATA/**/*"]
    },
    {
      "identifier": "fs:allow-app-write",
      "allow": ["$APPDATA/**/*"]
    }
  ]
}
